@model FlightBooking.ViewModels.SearchRequestViewModel

@using (Html.BeginForm("Search", "FlightSearch", FormMethod.Post, new { @id = "searchForm" }))
{
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.Origin)
        @Html.TextBoxFor(model => model.Origin, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Origin)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Destination)
        @Html.TextBoxFor(model => model.Destination, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Destination)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DepartureDate)
        @Html.TextBoxFor(model => model.DepartureDate, "{0:yyyy-MM-dd}", new { @class = "form-control datepicker" })
        @Html.ValidationMessageFor(model => model.DepartureDate)
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
}
